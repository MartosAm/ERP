# ============================================================
# .env.production.example — Plantilla de variables para produccion
# Copiar a .env y rellenar TODOS los valores antes de desplegar.
# NUNCA subir valores reales a Git.
# ============================================================

# Base de datos PostgreSQL
DATABASE_URL=postgresql://erp_user:CAMBIAR_PASSWORD_SEGURO@postgres:5432/ERP_db?connection_limit=20&pool_timeout=10
DB_USER=erp_user
DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO
DB_NAME=ERP_db

# JSON Web Token (CAMBIAR a un secreto fuerte aleatorio >= 64 chars)
JWT_SECRET=CAMBIAR_A_SECRETO_SEGURO_DE_64_CARACTERES_MINIMO_AQUI_AHORA
JWT_EXPIRES_IN=8h

# Servidor
NODE_ENV=production
PORT=3001

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# CORS — URLs de los frontends permitidos (separar con comas)
CORS_ORIGIN=https://mi-erp.com,https://admin.mi-erp.com

# Logging (error | warn | info | debug)
LOG_LEVEL=info

# Proxy — numero de proxies entre el cliente y Node
# 1 = solo Nginx, 2 = CDN + Nginx
TRUST_PROXY=2

# Timeout de request en ms (30s default)
REQUEST_TIMEOUT_MS=30000

# Nginx (puertos del host)
NGINX_PORT=80
NGINX_SSL_PORT=443
